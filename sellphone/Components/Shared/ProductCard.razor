<div class="product-card">
    <div class="image-wrapper position-relative bg-light rounded overflow-hidden">
        @if (Discount > 0)
        {
            <div class="badge bg-danger position-absolute top-0 start-0 m-2 px-2 py-1">
                -@(Discount)%
            </div>
        }
        <div class="action-icons position-absolute top-0 end-0 m-2 d-flex flex-column gap-2">
            <button class="btn bg-white rounded-circle btn-icon shadow-sm p-1" style="width:30px; height:30px;">
                <i class="bi bi-heart"></i>
            </button>
            <button class="btn bg-white rounded-circle btn-icon shadow-sm p-1" style="width:30px; height:30px;">
                <i class="bi bi-eye"></i>
            </button>
        </div>
        <img src="@ImageUrl" class="w-100 " style="height: 250px; object-fit: cover;aspect-ratio: 1;background-color: rgb(220, 220, 220);" alt="@Name">
        <a href="/productdetail" class="text-white text-decoration-none">
        <button class="add-to-cart-btn btn btn-dark w-100 rounded-0 position-absolute bottom-0 start-0 py-2">           
                Add To Cart               
        </button>   
        </a>
    </div>
    <div class="mt-3 ">
        <h6 class="fw-bold mb-1 justify-content-start text-start">@Name</h6>
        <div class="d-flex gap-2 align-items-center justify-content-start text-start">
            <span class="text-danger fw-bold">$@Price</span>
            <span class="text-muted text-decoration-line-through small">$@OldPrice</span>
        </div>
        <div class="d-flex align-items-center gap-1 mt-1 justify-content-start text-start">
            <div class="text-warning small">
                @for (int i = 0; i < 5; i++)
                {
                    if (i < Stars)
                    {
                        <i class="bi bi-star-fill"></i>
                    }
                    else
                    {
                        <i class="bi bi-star"></i>
                    }
                }
            </div>
            <span class="text-muted small">(@Reviews)</span>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Name { get; set; } = "Product Name";
    [Parameter] public double Price { get; set; } = 0;
    [Parameter] public double OldPrice { get; set; } = 0;
    [Parameter] public int Discount { get; set; } = 0;
    [Parameter] public int Stars { get; set; } = 5;
    [Parameter] public int Reviews { get; set; } = 88;
    [Parameter] public string ImageUrl { get; set; } = "";
    [Parameter] public bool IsNew { get; set; } = false;
}
