@page "/not-found"
@layout MainLayout
<PageTitle>404 not-found</PageTitle>
<div class="container my-5 py-5">
    <div class="mb-5 text-muted small">
        <a href="/" class="text-muted text-decoration-none">Home</a>
        <span class="mx-2">/</span>
        <span class="text-black fw-bold">404 Error</span>
    </div>
    <div class="d-flex flex-column align-items-center justify-content-center text-center" style="min-height: 400px;">
        <h1 class="fw-medium mb-3 error-heading">404 Not Found</h1>
        <p class="text-black mb-5">Your visited page not found. You may go home page.</p>
        <a href="/" class="btn btn-danger px-5 py-3 rounded-1 fw-medium" style="min-width: 200px;">
            Back to home page
        </a>
    </div>
</div>
<style>    
    .error-heading {
        font-size: 110px; 
        letter-spacing: 3px; 
    }    
    @@media (max-width: 768px) {
        .error-heading {
            font-size: 60px;
        }
    }
</style>