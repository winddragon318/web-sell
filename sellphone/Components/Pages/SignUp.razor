    /* CSS cũ giữ nguyên */
    .login-input {
        border: none;
        border-bottom: 1px solid #ccc;
        border-radius: 0;
        padding: 10px 0;
        background: transparent;
        box-shadow: none !important;
    }

        .login-input:focus {
            border-bottom-color: black;
        }

    .bg-light-blue {
        background-color: #CBE4E8;
    }
</style>