@page "/cart"
<PageTitle>Cart</PageTitle>
<SectionContent SectionName="HeaderExtras">
    <div class="d-flex align-items-center gap-3 ms-3">
        <Cart_Heart />
        <AccountDropdown />
    </div>
</SectionContent>
<div class="container my-5 pb-5">
    <div class="mb-5">
        <span class="text-muted">Home /</span> <span class="text-black fw-bold">Cart</span>
    </div>
    <div class="table-responsive mb-4">
        <table class="table align-middle">
            <thead class="bg-white shadow-sm" style="height: 72px;">
                <tr>
                    <th scope="col" class="ps-4">Product</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col" class="text-end pe-4">Subtotal</th>
                </tr>
            </thead>
            <tbody>
                <tr class="bg-white shadow-sm mt-3" style="border-spacing: 0 15px;">
                    <td class="ps-4 py-4">
                        <div class="d-flex align-items-center position-relative justify-content-start">
                            <img src="/images/lgd.png"
                                 alt="Monitor" class="img-fluid me-3 " style="width: 50px; height: 50px; object-fit: contain;">
                            <span class="fw-normal">LCD Monitor</span>
                        </div>
                    </td>
                    <td>$650</td>
                    <td>
                        <input type="number" class="form-control quantity-input" value="01" min="1">
                    </td>
                    <td class="text-end pe-4">$650</td>
                </tr>
                <tr class="spacer-row"></tr>
                <tr class="bg-white shadow-sm">
                    <td class="ps-4 py-4">
                        <div class="d-flex align-items-center position-relative justify-content-start">
                            <img src="/images/console3.jfif"
                                 alt="Gamepad" class="img-fluid me-3" style="width: 50px; height: 50px; object-fit: contain;">
                            <span class="fw-normal">H1 Gamepad</span>
                        </div>
                    </td>
                    <td>$550</td>
                    <td>
                        <input type="number" class="form-control quantity-input" value="02" min="1">
                    </td>
                    <td class="text-end pe-4">$1100</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-between mb-5">
        <a href="/" class="btn btn-outline-dark px-4 py-3 rounded-1 fw-medium">Return To Shop</a>
        <button class="btn btn-outline-dark px-4 py-3 rounded-1 fw-medium">Update Cart</button>
    </div>
    <div class="row justify-content-between align-items-start mt-5">
        <div class="col-md-6 mb-4 mb-md-0 d-flex gap-3">
            <input type="text" class="form-control py-3 border-dark rounded-1 shadow-none" placeholder="Coupon Code" style="max-width: 300px;">
            <button class="btn btn-danger px-4 py-3 rounded-1">Apply Coupon</button>
        </div>
        <div class="col-md-4">
            <div class="border border-2 border-dark rounded p-4">
                <h5 class="fw-bold mb-4">Cart Total</h5>
                <div class="d-flex justify-content-between border-bottom pb-3 mb-3">
                    <span>Subtotal:</span>
                    <span>$1750</span>
                </div>
                <div class="d-flex justify-content-between border-bottom pb-3 mb-3">
                    <span>Shipping:</span>
                    <span>Free</span>
                </div>
                <div class="d-flex justify-content-between mb-4">
                    <span>Total:</span>
                    <span>$1750</span>
                </div>
                <div class="text-center">
                    <a href="/checkout" class="text-white text-decoration-none">
                    <button class="btn btn-danger py-3 rounded-1 fw-medium w-75">Procees to checkout</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    
    .table > :not(caption) > * > * {
        border-bottom-width: 0;
        box-shadow: none; 
    }
    .spacer-row {
        height: 20px;
    }
    .quantity-input {
        width: 70px;
        padding: 5px 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }
    .btn-remove {
        width: 20px;
        height: 20px;
        border-radius: 50%;
        background-color: #db4444; 
        color: white;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
        padding: 0;
        cursor: pointer;
        z-index: 2; /* Đè lên trên ảnh */
    }

        .btn-remove:hover {
            background-color: darkred;
        }

    /* 5. Hiệu ứng shadow cho các hàng (Giống thiết kế) */
    tr.bg-white {
        box-shadow: 0 1px 4px rgba(0,0,0,0.05) !important; /* Đổ bóng nhẹ */
    }
</style>