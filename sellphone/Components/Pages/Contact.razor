@page "/contact"
<PageTitle>Contact</PageTitle>

<SectionContent SectionName="HeaderExtras">
    <div class="d-flex align-items-center gap-3 ms-3">

        <Cart_Heart />
        <AccountDropdown />
    </div>
</SectionContent>
<div class="container my-5 pb-5">

    <div class="mb-5 text-muted small">
        <a href="/" class="text-muted text-decoration-none">Home</a>
        <span class="mx-2">/</span>
        <span class="text-black fw-bold">Contact</span>
    </div>

    <div class="row">

        <div class="col-lg-3 col-md-4 mb-4 mb-md-0">
            <div class="bg-white shadow-sm rounded p-4 h-100">

                <div class="mb-4">
                    <div class="d-flex align-items-center gap-3 mb-3 justify-content-start">
                        <div class="icon-circle bg-danger text-white">
                            <i class="bi bi-telephone"></i>
                        </div>
                        <h6 class="fw-bold mb-0">Call To Us</h6>
                    </div>
                    <p class="small text-muted mb-2">We are available 24/7, 7 days a week.</p>
                    <p class="small text-black mb-0">Phone: +8801611112222</p>
                </div>

                <hr class="my-4">

                <div>
                    <div class="d-flex align-items-center gap-3 mb-3 justify-content-start">
                        <div class="icon-circle bg-danger text-white">
                            <i class="bi bi-envelope"></i>
                        </div>
                        <h6 class="fw-bold mb-0">Write To Us</h6>
                    </div>
                    <p class="small text-muted mb-2">Fill out our form and we will contact you within 24 hours.</p>
                    <p class="small text-black mb-1">Emails: customer@exclusive.com</p>
                    <p class="small text-black mb-0">Emails: support@exclusive.com</p>
                </div>

            </div>
        </div>

        <div class="col-lg-9 col-md-8">
            <div class="bg-white shadow-sm rounded p-4 h-100">
                <form>
                    <div class="row g-3 mb-3">
                        <div class="col-md-4">
                            <input type="text" class="form-control contact-input" placeholder="Your Name *" required>
                        </div>
                        <div class="col-md-4">
                            <input type="email" class="form-control contact-input" placeholder="Your Email *" required>
                        </div>
                        <div class="col-md-4">
                            <input type="tel" class="form-control contact-input" placeholder="Your Phone *" required>
                        </div>
                    </div>

                    <div class="mb-4">
                        <textarea class="form-control contact-input" rows="8" placeholder="Your Massage"></textarea>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-danger px-4 py-3 rounded-1 fw-medium" style="min-width: 200px;">
                            Send Massage
                        </button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

<style>
    /* 1. Style cho ô input màu xám nhạt */
    .contact-input {
        background-color: #f5f5f5; /* Màu xám nhạt giống thiết kế */
        border: none; /* Bỏ viền */
        padding: 12px 16px;
        border-radius: 4px;
    }

        /* Khi click vào input thì hiện viền mờ hoặc shadow nhẹ (tùy chỉnh) */
        .contact-input:focus {
            background-color: #f5f5f5;
            box-shadow: none;
            outline: 1px solid #db4444; /* Viền đỏ khi nhập liệu */
        }

    /* 2. Style cho vòng tròn đỏ chứa icon */
    .icon-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 18px;
    }
</style>